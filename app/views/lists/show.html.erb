<h1><%= @list.name %></h1>

<h2>Bookmarks</h2>


<% @bookmarks.each do |bookmark| %>
  <div>
    <%= bookmark.movie.title %>
    <%= bookmark.comment  %>
  </div>
<% end %>

<%= link_to 'Back to lists', lists_path %>
<%= link_to '+ Bookmark', new_list_bookmark_path(@list) %>

<%= simple_form_for [ @list, @bookmark ] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>
